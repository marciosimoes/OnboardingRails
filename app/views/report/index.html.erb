<p id="notice"><%= notice %></p>

<h1>Lista de relatórios</h1>

<a href="reports/create">Gerar Novo</a>
<br>

<table>
  <thead>
    <tr>
      <th>Relatório</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |f| %>
      <tr>
        <td><%= f.to_s.split('/')[-1] %></td>
        <td><a href="../uploads/reports/<%= f.to_s.split('/')[-1] %>">Download</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

